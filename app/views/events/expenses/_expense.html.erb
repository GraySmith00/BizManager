<table class="table">
  
  <thead>
    <tr>
      <th>Source</th>
      <th>Amount</th>
      <th>Remove</th>
    </tr>
  </thead>
  
  <tbody>
    <% if @event.expenses.any? %>
      <% @event.expenses.persisted.each do |expense| %>
      <tr>
        <td><%= expense.source %></td>
        <td><%= expense.amount %></td>
        <td><%= link_to "Remove Expense", [@event, expense], 
                    method: :delete, 
                    class: 'btn btn-danger btn-sm',
                    data: {confirm: 'Are you sure?'} %></td>
                    
      </tr>
      <% end %>
    <% end %>
  </tbody>
  
</table>